{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2022",
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDir": "src"
    // "baseUrl": ".",
    // "paths": {
    //   "@/src/*": [
    //     "src/*"
    //   ],
    // }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}