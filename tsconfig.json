{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2022",
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "allowJs": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/src/*": [
        "src/*"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ]
}