{
  "name": "clean-ts-api",
  "version": "1.1.0",
  "main": "index.js",
  "repository": "git@github.com:tiagoluizpoli/clean-ts-api.git",
  "author": "Tiago Poli <tiagoluizpoli@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/main/server.ts",
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc",
    "docker:up": "yarn build && docker compose up -d",
    "docker:down": "docker compose down",
    "husky:prepare": "husky install",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test --watch -config=jest-unit-config.js",
    "test:integration": "yarn test --watch -config=jest-integration-config.js",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.5",
    "@types/supertest": "^2.0.14",
    "@types/validator": "^13.11.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "dotenv": "^16.3.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^3.14.0",
    "typescript": "*"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^5.9.0",
    "npm-check": "^6.0.1",
    "validator": "^13.11.0"
  },
  "engines": {
    "node": "18.x"
  }
}